        <TextBox x:Name="controlNoTxt" FontSize="20" HorizontalAlignment="Left" Height="39" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="212" Margin="369,64,0,0"/>
        <ComboBox x:Name="courseList" FontSize="20" HorizontalAlignment="Left" Margin="21,64,0,0" VerticalAlignment="Top" Width="327" Height="39" SelectionChanged="CourseList_SelectionChanged"/>

    </Grid>
</Window>
